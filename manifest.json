{
  "manifest_version": 2,
  "name": "Amnesia",
  "version": "1.1",
  "description": "Analyse des liens et historique Firefox.",
  "permissions": [
    "history",
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Inspect Link History"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "32": "icon32.png",
    "64": "icon64.png"
  }
}
